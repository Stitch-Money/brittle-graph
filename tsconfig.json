{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "DOM"
    ],
    "noImplicitAny": true,
    "strict": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "target": "es6"
  },
  "include": [
    "src",
    "__tests__",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ]
}